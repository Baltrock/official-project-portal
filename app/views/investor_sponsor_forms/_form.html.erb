
<%= simple_form_for(@investor_sponsor_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :preferred_project %>
    <%= f.input :currency %>
    <%= f.input :investment %>
    <%= f.input :sponsor_reason %>
    <%= f.input :invest_reason %>
    <%= f.input :investment_history %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
