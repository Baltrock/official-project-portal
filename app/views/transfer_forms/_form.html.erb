
<%= simple_form_for(@transfer_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :transfer_from %>
    <%= f.input :transfer_to %>
    <%= f.input :project_involved %>
    <%= f.input :transfer_reason %>
    <%= f.input :outcome_expectation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
